<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/White"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/relative_view_user_alphabet">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/text_view_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="@dimen/margin_avg"

        android:layout_centerVertical="true"
        android:gravity="center"

        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_toEndOf="@+id/relative_view_user_alphabet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textlines"
        >
    <TextView

        android:id="@+id/chatName_txt"
        android:textSize="15dp"
        android:text="Name"
        android:paddingTop="18dp"
        android:gravity="top"
        android:layout_marginLeft="10dp"
        android:textStyle="normal|bold"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

    </TextView>


    <TextView
        android:id="@+id/chatTime_txt"
        android:textSize="10dp"
        android:text="13:21"
        android:paddingTop="20dp"
        android:gravity="top"
        android:layout_marginRight="10dp"
        android:textStyle="normal"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:textSize="15dp"
            android:text="Message"
            android:gravity="left"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/Chat_message_txt"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </RelativeLayout>

</RelativeLayout>